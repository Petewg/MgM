#xcommand DRAW BORDER;
             WINDOW <cWindowName>  ;
             CONTROL <cControlName>  ;  
             [PENWIDTH <nPnWidth>];
             [UPCOLOR <aUpColor>] ;
             [DOWNCOLOR <aDnColor>] ;
             [SPACE <nSpace>] ;
          =>;
          DrawBorder( <cWindowName>, <cControlName>, <nPnWidth>, [<aUpColor>], [<aDnColor>], <nSpace>  ) 
